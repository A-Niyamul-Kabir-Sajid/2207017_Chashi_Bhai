<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Buyer Sign-Up" textAlignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <TextField fx:id="nameField" layoutX="100.0" layoutY="80.0" promptText="Name" />
        <TextField fx:id="emailField" layoutX="100.0" layoutY="120.0" promptText="Email" />
        <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="160.0" promptText="Password" />
        <Button layoutX="250.0" layoutY="200.0" text="Sign Up" onAction="#handleSignUp" />
        <Label fx:id="errorLabel" layoutX="100.0" layoutY="240.0" textFill="red" />
    </children>
</AnchorPane>