<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" alignment="TOP_CENTER" spacing="8" styleClass="crop-item" 
      xmlns="http://javafx.com/javafx/17.0.12" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.sajid._207017_chashi_bhai.controllers.CropItemController"
      maxWidth="300" minWidth="280" prefWidth="280">
    
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <children>
        <!-- Image at the top -->
        <ImageView fx:id="imageView" fitHeight="180" fitWidth="256" preserveRatio="true" styleClass="crop-image">
            <viewport>
                <javafx.geometry.Rectangle2D width="256" height="180"/>
            </viewport>
        </ImageView>

        <!-- Details below -->
        <VBox alignment="CENTER_LEFT" spacing="4" VBox.vgrow="ALWAYS">
            <Label fx:id="nameLabel" styleClass="crop-name" text="Crop name" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" wrapText="true"/>
            <Label fx:id="categoryLabel" styleClass="crop-category" text="Category" 
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="farmerLabel" styleClass="crop-farmer" text="Farmer: Name" 
                   style="-fx-font-size: 12px; -fx-text-fill: #444;"/>
            <Label fx:id="remainingLabel" styleClass="crop-remaining" text="Remaining: 0 kg" 
                   style="-fx-font-size: 12px; -fx-text-fill: #888;"/>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label fx:id="priceLabel" styleClass="crop-price" text="à§³ 0.00" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="viewButton" onAction="#onViewClicked" styleClass="button-primary" text="View" 
                        style="-fx-font-size: 12px; -fx-padding: 6 16;"/>
            </HBox>
        </VBox>
    </children>
</VBox>
