<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<DialogPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="dialogPane"
            prefWidth="400" prefHeight="320">

    <content>
        <VBox spacing="16" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Title -->
            <Label text="ছবি যোগ করুন"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <!-- Image Preview (with placeholder so Scene Builder shows something) -->
            <ImageView fx:id="imagePreview"
                       fitWidth="200" fitHeight="150"
                       preserveRatio="true">
                <image>
                    <Image url="@placeholder.png"/>
                </image>
            </ImageView>

            <!-- Choose File Button -->
            <Button fx:id="btnChooseFile"
                    text="ছবি নির্বাচন করুন"
                    maxWidth="200"/>

            <!-- File Name Label -->
            <Label fx:id="lblFileName"
                   text="No file chosen"
                   style="-fx-font-size: 12px; -fx-text-fill: #888;"/>

            <!-- Action Buttons -->
            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="btnOk" text="ঠিক আছে" defaultButton="true"/>
                <Button fx:id="btnCancel" text="বাতিল করুন" cancelButton="true"/>
            </HBox>
        </VBox>
    </content>
</DialogPane>